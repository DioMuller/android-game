<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.diogomuller.tensecondheroes" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Main Screen -->
        <activity
            android:name="com.diogomuller.tensecondheroes.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Game Screen -->
        <activity
            android:name="com.diogomuller.tensecondheroes.activities.MainGameActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.diogomuller.tensecondheroes.activities.LevelSelectActivity"
            android:label="@string/title_activity_level_select"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
